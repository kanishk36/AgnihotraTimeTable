<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/dialogMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_gravity="center"
        android:background="@color/bright_turquoise">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/turquoise"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_30">

            <TextView android:id="@+id/txtSunrise"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/lblSunrise"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/txtSunrise"
                android:layout_marginStart="@dimen/dp_10"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView android:id="@+id/lblAMTime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"/>

                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/lblAM"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/dp_5"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30">

            <TextView android:id="@+id/txtSunset"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/lblSunset"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/txtSunset"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView android:id="@+id/lblPMTime"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"/>

                <TextView android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/lblPM"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/dp_5"/>

            </LinearLayout>

        </RelativeLayout>

        <Button android:id="@+id/btnClose"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_50"
            android:text="@string/btnOK"
            android:textColor="@color/turquoise"
            android:background="@drawable/button_background_with_shadow"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_30"/>

    </LinearLayout>

</FrameLayout>