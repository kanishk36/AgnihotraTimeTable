<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1.0"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <TextView android:id="@+id/lblDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblDay"
            android:gravity="center_horizontal"
            android:textColor="@color/turquoise"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bright_turquoise"/>

    </LinearLayout>

    <View android:layout_height="fill_parent"
        android:layout_width="@dimen/dp_1"
        android:background="@color/bright_turquoise"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <TextView android:id="@+id/lblAM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblAM"
            android:gravity="center_horizontal"
            android:textColor="@color/turquoise"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bright_turquoise"/>

    </LinearLayout>

    <View android:layout_height="fill_parent"
        android:layout_width="@dimen/dp_1"
        android:background="@color/bright_turquoise"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <TextView android:id="@+id/lblPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblPM"
            android:gravity="center_horizontal"
            android:textColor="@color/turquoise"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bright_turquoise"/>

    </LinearLayout>

</LinearLayout>